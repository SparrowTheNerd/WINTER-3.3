{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build STM",
			"type": "process",
			"command": "${command:stm32-for-vscode.build}",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build Clean STM",
			"type": "process",
			"command": "${command:stm32-for-vscode.cleanBuild}",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Flash STM",
			"dependsOn": "Build STM",
			"type": "process",
			"command": "/home/sparrow/STMicroelectronics/STM32Cube/STM32CubeProgrammer/bin/STM32_Programmer_CLI",
            "args": [
                "-c", "port=SWD",
                "-d", "${workspaceFolder}/build/debug/WINTER3-3.bin", "0x08000000",
                "-rst"
            ],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Flash DFU",
			"dependsOn": "Build STM",
			"type": "process",
			"command": "/home/sparrow/STMicroelectronics/STM32Cube/STM32CubeProgrammer/bin/STM32_Programmer_CLI",
			"args": [
				"-c", "port=USB1",
				"-d", "${workspaceFolder}/build/debug/WINTER3-3.bin", "0x08000000",
				"-rst"
			],
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"problemMatcher": []
		}
	]
}